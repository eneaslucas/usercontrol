@model List<ExibirUsuariosViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Página do Admin</h1>
</div>
<div>
    <a href="\Admin\CadastrarUsuario" class="btn btn-default">Cadastrar Usuário</a>
</div>
<div class="well hidden well-sm" data-target="tabela1">
    <p class="alert-danger text-center">@TempData["LoginErro"]</p>
    <p class="alert-danger text-center">@TempData["NaoExiste"]</p>
    <p class="alert-success text-center">@TempData["DeletarSucesso"]</p> 
</div>

<div class="table-responsive">
    <table class="table ls-table">
        <thead>
            <tr>
                <th>Login</th>
                <th>Senha</th>
                <th>Perfil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.login</td>
                    <td>@usuario.senha</td>
                    <td>@usuario.perfil</td>
                    <td><a href="\Admin\EditarUsuario?=@usuario.id" class="btn btn-default">Editar</a></td>
                    <td><form action="Admin/DeletarUsuario" method="post">
                            <input type="hidden" name="id" value="@usuario.id" />
                            <input type="submit" value="Deletar" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <form action="\Admin\Logout" method="post">
            <input class="btn btn-default" type="submit" value="Sair" />
        </form>
    </div>
</div>
